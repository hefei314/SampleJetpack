<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hefei.jetpack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ThisApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="667" /> <!-- 适配全面屏 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" /> <!-- 适配华为(hua wei)刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米(xiao mi)刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sample_lifecycle.LifecycleMainActivity"
            android:label="SampleLifecycle" />
        <activity
            android:name=".sample_livedata.LiveDataMainActivity"
            android:label="SampleLiveData" />
        <activity
            android:name=".sample_viewmodel.ViewModelMainActivity"
            android:label="SampleViewModel" />
        <activity
            android:name=".sample_databinding.DataBindingMainActivity"
            android:label="SampleDataBinding" />
        <activity
            android:name=".sample_hilt.HiltMainActivity"
            android:label="SampleHilt" />
        <activity
            android:name=".sample_room.RoomMainActivity"
            android:label="SampleRoom" />
        <activity
            android:name=".sample_paging.PagingMainActivity"
            android:label="SamplePaging" />
        <activity
            android:name=".sample_navigation.NavigationMainActivity"
            android:label="SampleNavigation" />
        <activity
            android:name=".sample_workmanager.WorkManagerMainActivity"
            android:label="SampleWorkManager" />
    </application>

</manifest>